<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_round_rect_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_confirm_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="2"
        android:textColor="#000607"
        android:textSize="20sp" />

    <View
        android:layout_width="280dp"
        android:layout_height="0.5dp"
        android:background="@color/dialog_personal_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_confirm_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/tab_line_color"
            android:textSize="18sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/dialog_personal_divider" />

        <TextView
            android:id="@+id/dialog_confirm_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/tab_line_color"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
