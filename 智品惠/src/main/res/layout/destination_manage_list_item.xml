<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_des"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:text="姓名"
            android:textColor="@color/tv_color15"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="center|right"
            android:text="18813904075"
            android:textColor="@color/tv_color15"
            android:textSize="@dimen/size_14" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_place"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:gravity="center|left"
        android:text="fdfdfdfdfdfdf"
        android:textColor="@color/tv_color15"
        android:textSize="@dimen/size_14" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_chose"
            style="@style/CommCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:text="@string/moren"
            android:textSize="@dimen/size_13"
            android:textColor="@color/tv_color15"
            android:paddingRight="15dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bianji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:drawableLeft="@drawable/address_compile"
                android:drawablePadding="5dp"
                android:layout_marginRight="14dp"
                android:text="@string/bianji"
                android:textColor="@color/tv_color15"
                android:textSize="@dimen/size_13" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:drawableLeft="@drawable/address_delete"
                android:drawablePadding="5dp"
                android:text="@string/delete"
                android:textColor="@color/tv_color15"
                android:textSize="@dimen/size_13" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>