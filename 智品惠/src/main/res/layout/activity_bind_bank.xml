<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blank_color"
    android:orientation="vertical"
    android:scrollbars="none">

    <com.zph.commerce.widget.TopNvgBar5
        android:id="@+id/top_nvg_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:lvisible="true"
        custom:rvisible="false"
        custom:title="@string/tv_16" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_blank_color"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_blank_color"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/abc_linear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="18sp"
                    android:text="@string/abc_top"
                    android:textColor="@color/tv_62"
                    android:textSize="@dimen/size_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/abc_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:text="@string/abc_name"
                        android:textColor="@color/tv_color2"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:id="@+id/abc_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/abc_tv1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/tv_color2"
                        android:textSize="@dimen/size_15"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="0dp"
                        android:background="@color/divider" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/abc_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:text="@string/abc_card_number"
                        android:textColor="@color/tv_color2"
                        android:textSize="@dimen/size_15" />

                    <EditText
                        android:id="@+id/abc_bank_number"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/abc_tv2"
                        android:background="@null"
                        android:hint="@string/abc_card_number_hint"
                        android:inputType="number"
                        android:textColor="@color/tv_color2"
                        android:textColorHint="@color/hint_text_gray"
                        android:textSize="@dimen/size_15" />


                    <TextView
                        android:id="@+id/tv_err1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="15dp"
                        android:gravity="center|right"
                        android:textColor="@color/color5"
                        android:textSize="@dimen/size_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/abc_bank_number"
                    android:layout_marginTop="0dp"
                    android:background="@color/divider" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/abc_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="25dp"
                        android:text="@string/abc_bank_name"
                        android:textColor="@color/tv_color2"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:id="@+id/abc_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/abc_tv3"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/abc_bank_name_hint"
                        android:textColor="@color/tv_color2"
                        android:textColorHint="@color/hint_text_gray"
                        android:textSize="@dimen/size_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/abc_bank_name"
                        android:layout_marginTop="0dp"
                        android:background="@color/divider" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/aser_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="22dp"
                        android:text="@string/abc_img_hint"
                        android:textColor="@color/tv_color2"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:id="@+id/abc_select_province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/aser_tv3"
                        android:background="@drawable/activity_setting_item_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/abc_select_province"
                        android:textColor="@color/arp_text1"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:id="@+id/abc_select_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/abc_select_province"
                        android:background="@drawable/activity_setting_item_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/abc_select_city"
                        android:textColor="@color/arp_text1"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:id="@+id/abc_select_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/abc_select_city"
                        android:background="@drawable/activity_setting_item_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/abc_select_area"
                        android:textColor="@color/arp_text1"
                        android:textSize="@dimen/size_15" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <EditText
                        android:id="@+id/abc_sub_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="100dp"
                        android:background="@null"
                        android:hint="@string/abc_sub_name_hint"
                        android:textColor="@color/tv_color2"
                        android:textColorHint="@color/hint_text_gray"
                        android:textSize="@dimen/size_15" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/abc_bank_name"
                    android:layout_marginTop="0dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/tv_2"
                        android:textColor="@color/tv_color2"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center|left"
                        android:paddingLeft="35dp"
                        android:singleLine="true"
                        android:textColor="@color/tv_color2"
                        android:textColorHint="@color/tv_color4"
                        android:textSize="@dimen/size_15"
                        />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/tv_3"
                        android:textColor="@color/tv_color2"
                        android:textSize="@dimen/size_15" />

                    <EditText
                        android:id="@+id/ed_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center|left"
                        android:hint="@string/ed_hint_yzm"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingLeft="35dp"
                        android:singleLine="true"
                        android:textColor="@color/tv_color2"
                        android:textColorHint="@color/tv_color4"
                        android:textSize="@dimen/size_15" />


                    <TextView
                        android:id="@+id/tv_yzm"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center|right"
                        android:background="@drawable/guide_shape"
                        android:gravity="center|right"
                        android:text="@string/tv_yzm"
                        android:textColor="@color/bg_main_bottom"
                        android:textSize="@dimen/size_13" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/aser3_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="上传银行卡"
                        android:textColor="@color/tv_color2"
                        android:textSize="@dimen/size_15" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp">

                        <FrameLayout
                            android:layout_width="187dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/aser_round_rect_border">

                            <ImageView
                                android:id="@+id/abc_bank_img"
                                android:layout_width="187dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/earnings_bank_card"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:id="@+id/frame_image2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/earnings_add" />
                        </FrameLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/abc_bottom"
                        android:textColor="@color/tab_text_gray7"
                        android:textSize="@dimen/size_13" />

                    <TextView
                        android:id="@+id/tv_err2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="18dp"
                        android:textColor="@color/color5"
                        android:textSize="@dimen/size_13" />



                </LinearLayout>

                <Button
                    android:id="@+id/confirm_button"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/bg_login_style"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/bg_color"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
