<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
     <!--按钮按下时的效果 -->
    <item android:state_pressed="true">
        <shape>
            <!-- 渐变： 以圆中心 向周围扩散 -->
			<gradient android:startColor="@color/bg_main_bottom50" android:endColor="@color/bg_main_bottom50"
			    android:type="radial" android:gradientRadius="70"/>
			<corners android:radius="4dp"/>
			<stroke android:width="0.5dp" android:color="@color/bg_main_bottom50"></stroke>
			
		</shape>
    </item>
    
    
    <!-- 默认效果   #FF9100    @color/white-->
    <item>
        <shape>
			<gradient android:startColor="@color/bg_main_bottom50" android:endColor="@color/bg_main_bottom50"  android:angle="270"/>
			<corners android:radius="4dp"/>
			<stroke android:width="0.5dp" android:color="@color/bg_main_bottom50"></stroke>
			
		</shape>
    </item>
    
    
</selector>

<!-- 浅灰色背景，边框是灰色-->